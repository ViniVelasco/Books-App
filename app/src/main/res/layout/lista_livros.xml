<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagemLivro"
        android:layout_width="80dp"
        android:layout_height="75dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teste"
            android:id="@+id/tituloLivro">
        </TextView>

        <TextView
            android:id="@+id/autorLivro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tituloLivro"
            android:text="CRUD"></TextView>

        <TextView
            android:id="@+id/editoraLivro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/autorLivro"
            android:text="Editora"></TextView>

        <ImageView
            android:id="@+id/deletaItem"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/papacrud" />
    </RelativeLayout>





</android.widget.LinearLayout>